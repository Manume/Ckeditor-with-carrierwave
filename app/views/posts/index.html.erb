

<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title"><h1  class="text-center">Listing posts</h1></h3>
  </div>
  <div class="panel-body">
    <% @posts.each do |post| %>
      
        <p class="text-center"><%= post.name %></p>
        <p><center><%= post.body.html_safe%></center></p>
        <div class="pull-right">
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
        
      
    <% end %>
  </div>
  <div class="panel-footer"><h3 class="text-center"><%= link_to 'New Post', new_post_path,class: "btn btn-success" %></h3></div>
</div>


